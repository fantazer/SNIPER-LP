@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1200px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background $red
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 100
	.header
		padding: 8px 0
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(640px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	max-width 400px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 20px
	right: 20px
	cp()
	size 50px
	br(20px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--xl
	font-weight: 700

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%
// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	bsh()
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// drop
.dropdown
	width: 100%
	display inline-block
	br(4px)
	tr()
	position relative
	border 1px solid $border-color
	outline none!important
.dropdown-current
	cursor pointer
	display block
	padding 10px
	padding-right 25px
	font-weight: 700
	.icon
		position absolute
		top calc(50% - 6px)
		right 10px
		size 12px
		tr()

.dropdown.active
	border-radius 4px 4px 0 0
	.icon
		transform rotate(180deg)

.dropdown-menu
	position absolute
	background-color #fff
	width calc(100% + 2px)
	left -1px
	margin-top -1px
	border-radius 0 0 4px 4px
	overflow hidden
	display none
	max-height 200px
	overflow-y auto
	z-index 10
	border 1px solid $border-color
.dropdown-menu__el
	padding 10px
	cp()
	tr()
	border-bottom 1px solid $border-color
	//background: #f9f9f9
	&:last-child
		border 0
	&:hover
		background: white
		color black
// drop === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	border 1px solid $border-color
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

.main-section
	height: 100vh
	bg-full()

.header
	padding: 20px 0
	f()
	align-items center

.header__phone
	f()
	align-items center
	margin-right: 40px
	.icon
		size 32px
		margin-right: 20px
		fill white
	margin-left auto
	@extend .type--lg
	font-weight: 700
	color $yellow
.soc-row
	f()
.soc-row__el
	round()
	flex(mid)
	tr(all)
	margin-right: 10px
	size 42px
	border 2px solid #8f0001
	.icon
		size 20px
		fill #8f0001
.soc-row--white
	.soc-row__el
		&:hover
			.icon
				fill $yellow
			border-color $yellow
		.icon
			tr()
			fill white
		border-color white

.slogan
	color white
	margin-top: 15%
	max-width 700px
.slogan__title
	font-weight: 700
	@extend .type--xl
	margin-bottom: 20px
.slogan__text
	@extend .type--lg

.section-work
	bg-full()
	padding: 100px 0
.work-head
	f()
	align-items: flex-start
	justify-content space-between

.work-head__title
	font-weight: 700
	@extend .type--xl
	max-width 680px

.work-head__get
	f()
	align-items center

.work-cont
	f()
	margin: 100px 0
.work-cont__info
	@extend .type--lgx
	color white
	max-width 600px
	margin-left auto
	line-height: 1.4
.work-advant
	f()
	align-items: flex-start
	justify-content: space-around

.work-advant__el
	flex(mid)
	fl()
	width: 30%
	.icon
		fill white
		size 72px
		margin-bottom: 20px
.work-advant__el-info
	flex(mid)
	fl()
	color white
	@extend .type--lg

.section-process
	padding: 100px 0

.process__title
	@extend .type--xl
	bottom: 20px
	font-weight: 700
	margin-bottom: 20px

.process-head
	position relative
	z-index 10

.process-get
	f()
	align-items center
	.btn--md
		margin-right: 20px

.process-img
	margin-top: -10%

.process
	f()
	padding: 20px 0
	justify-content space-between
.process__col
	width: 16%
	ul
		padding-left: 20px
		li
			margin-bottom: 10px
			font-weight: 500
.process__col-title
	font-weight: 700
	@extend .type--md
	line-height: 1.6

.section
	padding: 100px 0

.section--gray
	background: #f8f8f8

.section-title
	text-align center
	font-weight: 700
	@extend .type--xl
	margin-bottom: 80px
.grid
	display: grid
	grid-gap 20px
	grid-template-columns: repeat(5, 1fr)
	//grid-template-columns: repeat(auto-fill, minmax(12rem,1fr))
.grid--mark
	.grid__el
		border 1px solid $border-color
.grid__el
	padding: 20px
.grid__el-img
	bg-full()
	padding: 10% 5%
	width: 100%
	background-size: contain

.cost
	flex(between)
	align-items: flex-start
.cost__col
	br(10px)
	box-shadow 0 0 51px rgba(0, 0, 0, 0.16)
	width: 28%
	&:nth-child(1)
		margin-top: 200px
		.cost__col-head
			padding-bottom: 140px
		.cost__col-head-bg
			width calc(100% + 25px)
			background-position top
	&:nth-child(2)
		.cost__col-head
			padding-bottom: 100px
		.cost__col-head-bg
			width calc(100% + 5px)
			background-position top
	&:nth-child(3)
		margin-top: 100px
		.cost__col-head
			padding-bottom: 100px
		.cost__col-head-bg
			width calc(100% + 17px)
			background-position top
			left -17px
.cost-info
	padding: 0 30px 30px 30px

.cost-get
	.btn--md
		width: 100%

.cost__col-head
	bg-full()
	color white
	text-align center
	padding: 30px
	position relative
.cost__col-head-bg
	position absolute
	top 0
	left 0
	width: 100%
	height: 100%
	bg-full()
	background-size contain
.cost__col-title-false
	display inline-block
	@extend .type--lg
	margin-bottom: 10px
	position relative
	&:before
		content ''
		width calc(100% + 10px)
		height: 3px
		position absolute
		left -5px
		top calc(50% - 3px)
		background: white
		transform rotate(-3deg)
.cost__col-title-true
	@extend .type--xl
	font-weight: 700
	position relative
	span
		@extend .type--md

.cost-list
	margin-bottom: 30px
.cost-list__el
	font-weight: 700
	margin-bottom: 20px
	padding-left: 26px
	position relative
	&:before
		content ''
		size 16px
		bg-full()
		background-image: url(../img/check.svg)
		position absolute
		left -5px
		top 2px

